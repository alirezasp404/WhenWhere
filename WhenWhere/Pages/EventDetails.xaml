<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WhenWhere.Pages.EventDetails" Title="Event Detail">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10">
            <Image Source="event_details.jpg" WidthRequest="500" Margin="20"/>
            <StackLayout Margin="15" WidthRequest="600">
                <Label Text="Digikala Event for Backend and Frontend developers" FontAttributes="Bold" FontSize="20" Margin="0,20,0,10" />
                <Label Text="Owner" FontSize="15"/>

                <Grid Margin="10,100,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Column="0" BackgroundColor="#E7E7E7" WidthRequest="120" CornerRadius="10">
                        <Label Text="Capacity: 30" FontSize="17"  TextColor="#707070"  HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" BackgroundColor="#E7E7E7" WidthRequest="120" CornerRadius="10">
                        <Label Text="Time: 15:30" FontSize="17"  TextColor="#707070"  HorizontalTextAlignment="Center"/>
                    </Frame>
                </Grid>
                
            </StackLayout>
        </StackLayout>

        <StackLayout Grid.Row="1" Margin="30,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Location:" FontSize="17" FontAttributes="Bold" Margin="0,0,10,0"/>
                <Label Grid.Column="1" Text="Tehran, Enghelab sq, Farahzad" FontSize="17"/>
            </Grid>
        </StackLayout>

        <StackLayout Grid.Row="2" Margin="30,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Description:" FontSize="17" FontAttributes="Bold" Margin="0,0,10,0"/>
